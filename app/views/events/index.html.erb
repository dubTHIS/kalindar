
<div id="events">
  <h2 id="month">
    <%= link_to "<", date: @date.prev_month %>
    <%= @date.strftime("%B %Y") %>
    <%= link_to ">", date: @date.next_month %>
  </h2>
  <%= calendar @date do |date| %>
    <%= date.day %>
    <% if @events_by_date[date] %>
      <ul>
        <% @events_by_date[date].each do |event| %>
          <li><%= link_to event.name + ' ' + event.course.name, event.course %></li>
        <% end %>
      </ul>
    <% end %>
  <% end %>
</div>
<p>Switch View to <%= link_to 'Day View', courses_path %></p>

