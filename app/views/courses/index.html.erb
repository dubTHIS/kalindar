<div class="page-header">
  <h1>All Courses</h1>
</div>

<div>
  <strong>To add a new course enter in your course code:</strong>
  <%= form_tag courses_path, :method => 'get', html: {class: "form-horizontal"} do %>
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag "Add", :name => nil %>
  <% end %>
<div>

<% @courses.each do |course| %>
<div class="course">
  <strong><%= course.course_code %></strong>
  <p><%= course.name %></p>
  <div class="meta">
    <%= link_to time_ago_in_words(course.created_at) + " ago", course %>
    <span class="admin">
      | <%= link_to "Edit", edit_course_path(course) %> |
      <%= link_to "Delete", course, method: :delete, data: { confirm: "Are you sure you want to delete this course?"} %>
    </span>
  </div>
</div>
<% end %>
