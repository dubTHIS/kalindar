<div class="page-header">
  <h1>All Courses</h1>
</div>
<div>
  <%= link_to "Add a Course!", search_courses_path, class: "btn btn-large btn-primary" %>
<div>
<br>
<ul id="course-list">
  <% current_user.courses.each do |course| %>
    <li class="course">
      <div class="course-header">
        <strong><%= course.course_code %></strong> - <%= course.name %>  <%= link_to '', course, :class => "icon-chevron-right pull-right" %><%= link_to '', remove_enrolled_ins_path(:course => course.id), :class => "icon-trash pull-right" %><%= link_to '', edit_course_path(course), :class => "icon-pencil pull-right" %><br />
      </div>
      <div class="course-details"><%= course.description %><br />
      </div>
    </li>
  <% end %>
</ul>
