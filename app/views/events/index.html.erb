
<div id="events">
  <h2 id="month">
    <%= link_to "<", date: @date.prev_month %>
    <%= @date.strftime("%B %Y") %>
    <%= link_to ">", date: @date.next_month %>
  </h2>
  <%= calendar @date do |date| %>
      <div id="filler">
      <div id="daylink"><%= link_to date.day, dayview_courses_path(date: date) %></div>
      <div><a href="#" id="overlayAddEvent"><i class="icon-plus"></i></a></div>
      <% if @events_by_date[date] %>

        <ul>
          <% @events_by_date[date].each do |event| %>
            <li><%= link_to event.course.course_code + ' ' + event.name, event.course %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
  <% end %>
</div>
<p>Switch View to <%= link_to 'Day View', dayview_courses_path %></p>

<div id="overlay" class="overlay">
  <h3>Which course do you want to add an event to:</h3>
  <% current_user.courses.each do |course| %>
    <%= link_to course.course_code, create_event_courses_path(:id => course.id) %>
    <br>
  <% end %>
</div>

